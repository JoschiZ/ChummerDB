@inherits MvvmComponentBase<IDialogCardViewModel>
@typeparam TItem where TItem: ChummerDB.Blazor.ComponentLibrary.Backend.xml.Interfaces.IHasName
@typeparam TCard where TCard : ICard<TItem>

@*
<MudPopover Open="ViewModel.Open">
    <DynamicCard TCard="TCard" TItem="TItem" ItemName="@ItemName" Parameters="Parameters" Item="Item"></DynamicCard>
</MudPopover>
*@

<MudDialog 
    @bind-IsVisible="@ViewModel.Open"
    Options="_dialogOptions"
    >
    <DialogContent>
        <DynamicCard TCard="TCard" TItem="TItem" ItemName="@ItemName" Parameters="Parameters" Item="Item"></DynamicCard>
    </DialogContent>
</MudDialog>
<MudButton 
    Style="text-decoration: underline" 
    Variant="Variant.Text" 
    Color="Color.Tertiary" 
    OnClick="@ViewModel.ToggleCommand.Execute"
    >@ItemName</MudButton>


@code {
    [Parameter, EditorRequired]
    public required string ItemName { get; set; }
    
    [Parameter]
    public IDictionary<string, object>? Parameters { get; set; }
    
    [Parameter]
    public TItem? Item { get; set; }

    private DialogOptions _dialogOptions = new()
    {
        NoHeader = true,
        CloseOnEscapeKey = true,
    };
}

<style>
    .mud-dialog{
        background-color: transparent;
        box-shadow: none;
    }
</style>